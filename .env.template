# Rune VCS Server Environment Configuration
# Copy this file to .env and customize for your setup

# Server Configuration
RUNE_SERVER_NAME=rune-server
RUNE_PORT=8080
RUNE_DOMAIN=localhost
RUNE_AUTH_TOKEN=your-secret-token-here
RUNE_DATA_DIR=./data
RUNE_LOG_LEVEL=info

# Database Configuration (for multi-user setups)
POSTGRES_DB=rune
POSTGRES_USER=rune
POSTGRES_PASSWORD=your-database-password-here

# SSL Configuration (for production)
RUNE_SSL_ENABLED=false
RUNE_SSL_CERT_PATH=/path/to/cert.pem
RUNE_SSL_KEY_PATH=/path/to/key.pem

# Advanced Settings
RUNE_MAX_CONNECTIONS=100
RUNE_TIMEOUT_SECONDS=30
RUNE_BACKUP_ENABLED=true
RUNE_BACKUP_INTERVAL=24h

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Load Balancing (for multi-server setups)
NGINX_ENABLED=true
NGINX_PORT=80
