      "url": "https://github.com/CaptainOtto/rune-vcs/releases/download/v0.0.2/rune-v0.0.2-x86_64-pc-windows-msvc.zip",
      "bin": [ "rune.exe" ]
    }
  },
  "post_install": [
    "$comp = \"$dir\\rune.ps1\"",
    "if (Test-Path $comp) {",
    "  if (!(Test-Path $PROFILE)) { New-Item -Type File -Force $PROFILE | Out-Null }",
    "  $line = \". $comp\"",
    "  if (-not (Select-String -Path $PROFILE -Pattern [regex]::Escape($line) -Quiet)) { Add-Content -Path $PROFILE -Value $line }",
    "  Write-Host 'PowerShell completions enabled (restart shell).'", 
    "}"
  ]
}